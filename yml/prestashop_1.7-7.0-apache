version: "2"
services:
  $host_mysql:
    container_name: $host_mysql
    image: mysql:5.7.22
    #restart: always
    environment:
      MYSQL_ROOT_PASSWORD: password
    volumes:
      - $path/$host/mysql:/var/lib/mysql  
    network_mode: bridge

  $host_ps:
    container_name: $host_ps
    image: prestashop/prestashop:1.7-7.0-apache
    #restart: always
    volumes:
      - $path/$host/public_html:/var/www/html
    links:
      - $host_mysql:mysql
    environment:
      WORDPRESS_DB_PASSWORD: password    
      VIRTUAL_HOST: www.$host, $host
    network_mode: bridge

  $host_phpmyadmin:
    container_name: $host_phpmyadmin
    image: phpmyadmin/phpmyadmin
    #restart: always
    links:
      - $host_mysql:mysql
    environment:
      VIRTUAL_HOST: phpmyadmin.$host
      MYSQL_USERNAME: root
      MYSQL_ROOT_PASSWORD: password
      PMA_HOST: mysql
    network_mode: bridge
